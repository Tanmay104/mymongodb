<%- model_class = Company -%>
<div class="page-header">
  <h1><%=t '.title', :default => model_class.model_name.human.titleize %></h1>
</div>

<dl class="dl-horizontal">
  <dt><strong><%= model_class.human_attribute_name(:name) %>:</strong></dt>
  <dd><%= @company.name %></dd>
  <dt><strong><%= model_class.human_attribute_name(:subdomain) %>:</strong></dt>
  <dd><%= @company.subdomain %></dd>
  <dt><strong><%= model_class.human_attribute_name(:address1) %>:</strong></dt>
  <dd><%= @company.address1 %></dd>
  <dt><strong><%= model_class.human_attribute_name(:address2) %>:</strong></dt>
  <dd><%= @company.address2 %></dd>
  <dt><strong><%= model_class.human_attribute_name(:zip) %>:</strong></dt>
  <dd><%= @company.zip %></dd>
  <dt><strong><%= model_class.human_attribute_name(:city) %>:</strong></dt>
  <dd><%= @company.city %></dd>
  <dt><strong><%= model_class.human_attribute_name(:other_industry_type) %>:</strong></dt>
  <dd><%= @company.other_industry_type %></dd>
  <dt><strong><%= model_class.human_attribute_name(:year_start_date) %>:</strong></dt>
  <dd><%= @company.year_start_date %></dd>
  <dt><strong><%= model_class.human_attribute_name(:year_end_date) %>:</strong></dt>
  <dd><%= @company.year_end_date %></dd>
  <dt><strong><%= model_class.human_attribute_name(:is_blocked) %>:</strong></dt>
  <dd><%= @company.is_blocked %></dd>
</dl>

<%= link_to t('.back', :default => t("helpers.links.back")),
              companies_path, :class => 'btn btn-default'  %>
<%= link_to t('.edit', :default => t("helpers.links.edit")),
              edit_company_path(@company), :class => 'btn btn-default' %>
<%= link_to t('.destroy', :default => t("helpers.links.destroy")),
              company_path(@company),
              :method => 'delete',
              :data => { :confirm => t('.confirm', :default => t("helpers.links.confirm", :default => 'Are you sure?')) },
              :class => 'btn btn-danger' %>
