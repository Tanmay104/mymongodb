<%= form_for @brand, url: clients_brands_path, :html => { :class => "form-horizontal company" } do |f| %>

  <% if @brand.errors.any? %>
    <div id="error_expl" class="panel panel-danger">
      <div class="panel-heading">
        <h3 class="panel-title"><%= pluralize(@brand.errors.count, "error") %> prohibited this brand from being saved:</h3>
      </div>
      <div class="panel-body">
        <ul>
        <% @brand.errors.full_messages.each do |msg| %>
          <li><%= msg %></li>
        <% end %>
        </ul>
      </div>
    </div>
  <% end %>

  <div class="form-group">
    <%= f.label "Brand Name", :class => 'control-label col-lg-2' %>
    <div class="col-lg-10">
      <%= f.text_field :name %>
    </div>
    <%=f.error_span(:name) %>
  </div>
  <div class="form-group">
    <%= f.label "Business Unit", :class => 'control-label col-lg-2' %>
    <div class="col-lg-10">
      <%= f.text_field :business_unit%>
    </div>
    <%=f.error_span(:business_unit) %>
  </div>
  <div class="form-group">
    <%= f.label :Category, :class => 'control-label col-lg-2' %>
    <div class="col-lg-10">
      <%= f.text_field :category %>
    </div>
    <%=f.error_span(:category) %>
  </div>
  <div class="form-group">
    <%= f.label "Brand Lifecycle", :class => 'control-label col-lg-2' %>
    <div class="col-lg-10">
      <%= f.text_field :life_cycle %>
    </div>
    <%=f.error_span(:life_cycle) %>
  </div>
  <div class="form-group">
    <%= f.label "Brand Manager", :class => 'control-label col-lg-2' %>
    <div class="col-lg-10">
      <%= f.text_field :brand_manager %>
    </div>
    <%=f.error_span(:brand_manager) %>
  </div>
  <div class="form-group">
    <%= f.label :Title, :class => 'control-label col-lg-2' %>
    <div class="col-lg-10">
      <%= f.text_field :title %>
    </div>
    <%=f.error_span(:title) %>
  </div>
  <div class="form-group">
    <%= f.label :Email, :class => 'control-label col-lg-2' %>
    <div class="col-lg-10">
      <%= f.email_field :email %>
    </div>
    <%=f.error_span(:email) %>
  </div>
  <div class="form-group">
    <%= f.label :Contact, :class => 'control-label col-lg-2' %>
    <div class="col-lg-10">
      <%= f.text_field :contact_no %>
    </div>
    <%=f.error_span(:contact_no) %>
  </div>
  
  <div class="form-group">
    <div class="col-lg-offset-2 col-lg-10">
      <%= f.submit nil, :class => 'btn btn-primary' %>
      <%= link_to t('.cancel', :default => t("helpers.links.cancel")),
                clients_brands_path, :class => 'btn btn-default' %>
    </div>
  </div>

<% end %>
